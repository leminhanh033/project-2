extends ../layout/tong-quan-layout.pug

block title
    title Thông tin cá nhân

block main
    .content
        .inner-title Thông tin cá nhân
        .section-8 
            .inner-group 
                label(for="name") Họ tên
                input(type="text" id="name" )
            .inner-group 
                label(for="email") Email
                input(type="email" id="email")
            .inner-group 
                label(for="phone") Số điện thoại
                input(type="text" id="phone")
            
            .inner-group 
                label(for="chuc-vu") Chức vụ
                input(type="text" id="chuc-vu")
            .inner-group 
                label(for="nhom-quyen") Nhóm quyền
                input(type="text" id="nhom-quyen")
            .inner-group.two-col
                div.avatar 
                    label(for="avatar") Ảnh đại diện
                    div
                        input(type="file" id="avatar")
            
            .inner-group.two-col
                div.button
                    button Cập nhật
            .inner-group.two-col
                div.return
                    a(href="#") Đổi mật khẩu


                        
