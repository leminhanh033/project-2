extends ../layout/tong-quan-layout.pug

block title
    title Nhóm quyền

block main
    .content
        .inner-title Nhóm quyền
        
        .section-5 
            .inner-action 
                select 
                    option -- Hành động --
                    option Hành động
                div Áp dụng
            .inner-search 
                i.fa-solid.fa-magnifying-glass
                input(type="text" placeholder="Tìm kiếm")
            button + Tạo mới
                
        .table-1 
            table 
                thead 
                    tr 
                        th.check-box
                            include ../mixin/checkbox.pug
                            +checkbox("checkbox-1","20px")
                        th.left 
                            div Tên nhóm quyền
                        th.left
                            div Mô tả ngắn
                        th.action
                            div Hành động
                tbody 
                    tr 
                        td.check-box
                            include ../mixin/checkbox.pug
                            +checkbox("checkbox-3","20px")
                        td.left
                            div Quản trị viên
                        td.left
                            div Có đầy đủ các quyền
                        td.action.left
                            .inner-list 
                                div 
                                    i.fa-solid.fa-pen-to-square
                                div 
                                    i.fa-solid.fa-trash-can
                    tr 
                        td.check-box
                            include ../mixin/checkbox.pug
                            +checkbox("checkbox-4","20px")
                        td.left
                            div Quản lý tour
                        td.left
                            div Có đầy đủ quyền liên quan đến tour
                        td.action.left
                            .inner-list 
                                div 
                                    i.fa-solid.fa-pen-to-square
                                div 
                                    i.fa-solid.fa-trash-can
                    tr 
                        td.check-box
                            include ../mixin/checkbox.pug
                            +checkbox("checkbox-3","20px")
                        td.left
                            div Quản lý đơn hàng
                        td.left
                            div Có đầy đủ quyền liên quan đến đơn hàng
                        td.action.left
                            .inner-list
                                div 
                                    i.fa-solid.fa-pen-to-square
                                div 
                                    i.fa-solid.fa-trash-can
        
    


                        
