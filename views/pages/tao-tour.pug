extends ../layout/tong-quan-layout.pug

block title
    title Tạo tour

block main
    .content
        .inner-title Tạo tour
        .section-8 
            .inner-group 
                label(for="name") Tên danh mục
                input(type="text" id="name" )
            .inner-group 
                label(for="parent") Danh mục cha
                select#parent(name="") 
                    option -- Chọn danh mục --
            .inner-group 
                label(for="position") Vị trí
                input(type="number" id="position")
            .inner-group 
                label(for="state") Trạng thái
                select#state(name="")
                    option Hoạt động
            .inner-group.two-col 
                div.avatar 
                    label(for="avatar") Ảnh đại diện
                    div
                        input(type="file")
            .inner-group.price 
                div Giá cũ
                .inner-price 
                    .inner-item 
                        span Người lớn
                        input(type="number")
                    .inner-item 
                        span Trẻ em
                        input(type="number")
                    .inner-item 
                        span Em bé
                        input(type="number")
            .inner-group.price 
                div Giá mới
                .inner-price 
                    .inner-item 
                        span Người lớn
                        input(type="number")
                    .inner-item 
                        span Trẻ em
                        input(type="number")
                    .inner-item 
                        span Em bé
                        input(type="number")
            .inner-group.price 
                div Còn lại
                .inner-price 
                    .inner-item 
                        span Người lớn
                        input(type="number")
                    .inner-item 
                        span Trẻ em
                        input(type="number")
                    .inner-item 
                        span Em bé
                        input(type="number")
            .inner-group.destination 
                div Những địa điểm có tour 
                .inner-destination
                    .inner-item                     
                        include ../mixin/checkbox.pug
                        +checkbox("check-23-0", "20px")
                        span Hà Nội
                    .inner-item                     
                        include ../mixin/checkbox.pug
                        +checkbox("check-23-1", "20px")
                        span Đà Nẵng
                    .inner-item                     
                        include ../mixin/checkbox.pug
                        +checkbox("check-23-2", "20px")
                        span Nha Trang
                    .inner-item                     
                        include ../mixin/checkbox.pug
                        +checkbox("check-23-3", "20px")
                        span Hồ Chí Minh
            .inner-group     
                label(for="time") Thời gian
                input(type="text" id="time")
            .inner-group 
                label(for="vehicle") Phương tiện
                input(type="text" id="vehicle")
            .inner-group 
                label(for="khoi-hanh") Ngày khởi hành
                input(type="date" id="khoi-hanh")
            .inner-group.two-col 
                div.des
                    label(for="des") Thông tin tour
                    textarea#des(name="" textarea-mce) 
            .inner-list.two-col 
                .inner-list-title Lịch trình tour
                .inner-list-main 
                    .inner-schedule-item 
                        .inner-header 
                            div.square
                                img(src="assets/image/add.svg", alt="")
                            div.input
                                input(type="text")
                            div.square.rubbish-remove
                                img(src="assets/image/trash.svg", alt="")
                            div.square.button-hidden
                                i.fa-solid.fa-angle-down
                        .body
                            textarea(textarea-mce)
                .inner-button.add-schedule
                    button + Thêm lich trình
            .inner-group.two-col
                div.button
                    button Tạo mới
            .inner-group.two-col
                div.return
                    a(href="#") Quay lại danh sách


                        
