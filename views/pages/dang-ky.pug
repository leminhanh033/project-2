extends ../layout/page-layout.pug
block title
  title Đăng ký

block main
 .page-layout
    .inner-wrap 
      div.inner-title Đăng ký
      div.inner-content Tạo một tài khoản để tiếp tục
      .inner-block 
        .inner-item
            label(for="fullname") Họ tên
            input(type="text", id="fullname", placeholder="Ví dụ: Lê Văn A")
        .inner-item
          label(for="email") Email
          input(type="email", id="email", placeholder="Ví dụ: levana@gmail.com")
        .inner-item
          label(for="password") Mật khẩu
          input.pass(type="password", id="password")
        .inner-line 
          .remember-password 
            .checkbox-wrapper-23
              input#check-23(type="checkbox")
              label(
                style="--size: 24px" 
                for="check-23"
                )
                svg(viewBox="0,0,50,50")
                  path(d="M5 30 L 20 45 L 45 5")
            span Tôi chấp nhận các điều khoản và điều kiện
        button Đăng Ký
        .create 
          span Bạn đã có tài khoản?  
          a(href="#") Đăng nhập