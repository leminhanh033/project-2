extends ../layout/page-layout.pug
block title
  title Đăng nhập

block main
  .page-layout
    .inner-wrap 
      div.inner-title Đăng nhập
      div.inner-content Vui lòng nhập email và mật khẩu để tiếp tục
      .inner-block 
        .inner-item
          label(for="email") Email
          input(type="email", id="email", placeholder="Ví dụ: levana@gmail.com")
        .inner-item
          label(for="password") Mật khẩu
          input.pass(type="password", id="password")
        .inner-line 
          .remember-password 
            .checkbox-wrapper-23
              input#check-23(type="checkbox")
              label(
                style="--size: 24px" 
                for="check-23"
                )
                svg(viewBox="0,0,50,50")
                  path(d="M5 30 L 20 45 L 45 5")
            span Nhớ mật khẩu
          .forget-password 
            a(href="#") Quên mật khẩu?
        button Đăng Nhập
        .create 
          span Bạn chưa có tài khoản?   
          a(href="#") Tạo tài khoản